<mvc:View controllerName="html_mod.html_mod.controller.SystemInfo" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified" displayBlock="true" xmlns="sap.m" xmlns:tnt="sap.tnt">
	<Shell id="shell">
		<App id="app" class="sapUiResponsiveMargin">
			<pages>
				<Page id="page" title="{i18n>title}" showHeader="false">
					<content>
						<tnt:ToolHeader>
							<Button icon="sap-icon://nav-back" type="Transparent" press="navSplash">
								<layoutData>
									<OverflowToolbarLayoutData priority="NeverOverflow"/>
								</layoutData>
							</Button>
						</tnt:ToolHeader>
						
						<l:VerticalLayout class="sapUiSmallMargin">
							
							<Label text="Enter System Name" labelfor="systemName" class="sapUiTinyMarginEnd sapUiTinyMarginTop"/>
							<Input id="systemName" placeholder="System Name" valueLiveUpdate="true" width="400px"/>
			
							
							<Label text="Enter Host Name" labelFor="systemPath" class="sapUiTinyMarginEnd sapUiTinyMarginTop"/>
							<Input id="systemPath" placeholder="Host Name" valueLiveUpdate="true" width="100%"/>
							
							<Button class="sapUiSmallMarginTop" id="testConn" press="testConn" text="Test Connection" width="100%" enabled="true"/>
							
						
						</l:VerticalLayout>
						<l:VerticalLayout class="sapUiSmallMargin">
							<Label text="Enter Business User" labelfor="businessUser" class="sapUiTinyMarginEnd sapUiTinyMarginTop"/>
							<Input id="businessUser" placeholder="Business User" required="true" valueLiveUpdate="true" width="350px"/>
							
							<Label text="Enter System User" labelfor="systemUser" class="sapUiTinyMarginEnd sapUiTinyMarginTop"/>
							<Input id="systemUser" placeholder="System User" required="true" valueLiveUpdate="true" width="100%"/>
							
							<Label text="Enter System User Password" labelfor="systemUserPassword" class="sapUiTinyMarginEnd sapUiTinyMarginTop"/>
							<Input id="systemUserPassword" placeholder="Password" required="true" valueLiveUpdate="true" width="100%"/>
							
							<Button id="submitData" class="sapUiSmallMarginTop" press="toHomePage" text="Save and Continue" width="100%" enabled="false"/>
							
						</l:VerticalLayout>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>